<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="408dp"
        android:layout_height="366dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="239dp"
                android:layout_marginBottom="23dp"
                android:text="Select your mouse"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioButtonM1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="logitech" />

                <RadioButton
                    android:id="@+id/radioButtonM2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Razer" />

                <RadioButton
                    android:id="@+id/radioButtonM3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Sven" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="239dp"
                android:layout_marginBottom="23dp"
                android:text="Headphones"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rotationX="0">

                <RadioButton
                    android:id="@+id/radioButtonH1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Hyper ekes bookes ekes" />

                <RadioButton
                    android:id="@+id/radioButtonH2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Senhesiser" />

                <RadioButton
                    android:id="@+id/radioButtonH3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Phileps" />

                <RadioButton
                    android:id="@+id/radioButtonH4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Marshall" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="239dp"
                android:layout_marginBottom="23dp"
                android:text="Fortinayte ili pubdje"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/checkBoxP1"
                android:layout_width="145dp"
                android:layout_height="81dp"
                android:text="Playstation Faaaaive" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="239dp"
                android:layout_marginBottom="23dp"
                android:text="Fortinayte ili pubdje ?"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Fortinayte" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="pubdje" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="239dp"
                android:layout_marginBottom="23dp"
                android:text="Enter your name"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="My Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Res"
                android:text="Button" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="399dp"
        android:layout_height="349dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/comp" />

</androidx.constraintlayout.widget.ConstraintLayout>